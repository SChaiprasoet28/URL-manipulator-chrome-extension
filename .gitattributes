# Auto detect text files and perform LF normalization
* text=auto

# JS/TS files
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf

# Configs
.editorconfig text eol=lf
.eslintrc text eol=lf
.prettierrc text eol=lf
.gitattributes text eol=lf

# Binary files
*.png binary
*.jpg binary
*.gif binary
*.ico binary
*.zip binary 