{
  "name": "url-manipulator-extension",
  "version": "0.1.0",
  "description": "Chrome extension for URL manipulation",
  "scripts": {
    "build": "pnpm run generate-icons && rspack build --config rspack.config.js && pnpm run copy-files",
    "watch": "rspack build --config rspack.config.js --watch",
    "postinstall": "pnpm run build",
    "generate-icons": "node scripts/generate-icons.js",
    "copy-files": "node scripts/copy-files.js",
    "package": "node scripts/package-extension.js",
    "version:get": "node scripts/version.js get",
    "version:increment": "node scripts/version.js increment",
    "version:set": "node scripts/version.js set",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "packageManager": "pnpm@8.15.4",
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@rspack/cli": "^0.5.0",
    "@rspack/core": "^0.5.0",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/chrome": "^0.0.260",
    "@types/jest": "^29.5.12",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "typescript": "^5.0.0",
    "css-loader": "^6.7.0",
    "style-loader": "^3.3.0",
    "tailwindcss": "^3.3.0",
    "postcss-loader": "^7.3.0",
    "autoprefixer": "^10.4.0",
    "sharp": "^0.33.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "ts-jest": "^29.1.2",
    "archiver": "^6.0.1"
  }
} 